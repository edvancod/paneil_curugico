// form_main.js
const form = document.querySelector('form');
const tbody = document.querySelector('#tbody');


form.addEventListener('submit', (e) => {
  e.preventDefault();
  const formData = new FormData(form);
  const pacienteNome = document.getElementById('nome').value;
  const inicioCirurgia = formData.get('inicio_cirurgia');
  const fimCirurgia = formData.get('fim_cirurgia');
  const saidaPrevista = formData.get('saida_prevista');

  const newRow = document.createElement('tr');
  newRow.innerHTML = `
    <td>${pacienteNome}</td>
    <td>${inicioCirurgia}</td>
    <td>${fimCirurgia}</td>
    <td>${saidaPrevista}</td>
  `;
  tbody.appendChild(newRow);
});

